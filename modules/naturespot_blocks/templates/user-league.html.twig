<div class="row">
  <div class="col-md-12">
    {%  if content.title == content.latin %}
      <h1><em>{{ content.title }}</em></h1>
    {% else %}
      <h1>{{ content.title }} - <em>{{ content.latin }}</em></h1>
    {% endif %}
  </div>
</div>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#tab1">Species</a></li>
    <li><a data-toggle="tab" href="#tab2">Additional images</a></li>
</ul>

<div class="tab-content">
  <div id="tab1" class="tab-pane fade in active">
    <div class="row">
      <div class="col-md-12">{{ content.tab1 }}</div>
    </div>
    <div clas="row">
      <div class="col-md-7">
        <h2>Leicestershire & Rutland Map</h2>
        {{ drupal_plugin_block('ns_species_vc_map_block', false) }}
        {{ content.tab1bottomleft }}
      </div>
      <div class="col-md-5">{{ content.tab1bottomright }}</div>
    </div>
  </div>
  <div id="tab2" class="tab-pane fade">
    {{ content.tab2 }}
  </div>
</div>